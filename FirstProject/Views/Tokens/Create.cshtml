@model FirstProject.ViewModels.TokenViewModel

@{
    ViewBag.Title = "Create Token";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="h-position">Create Token</h4>
        <hr class="hr-design">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ComplainDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ComplainDescription, new { @class = "form-control", required = "Enter description" })
                @Html.ValidationMessageFor(model => model.ComplainDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProductId", null, "---Select---", htmlAttributes: new { @class = "form-control" })
                @*@Html.DropDownListFor(model => model.ProductId, Model.ProductSelectListItems, "--Select Product--", new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <span class="fa fa-undo"></span>@Html.ActionLink("  Back to List", "Index")
</div>
